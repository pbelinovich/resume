{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom", "es2016.array.include"],
    "noImplicitAny": true,
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "locale": "ru",
    "declaration": true,
    "pretty": true,
    "strict": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "web", "server", "common", "worker", "src/dev/mobile"],
}
